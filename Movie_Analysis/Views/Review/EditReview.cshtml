@model Movie_Analysis.Models.MovieReviewModel.MovieReviewModel

@{
    ViewData["Title"] = "EditReview";
}

<h2>EditReview</h2>

<h4>MovieReviewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReview" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <input type = "hidden" asp-for="MovieId" />
                <input type = "hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                @*<input asp-for="Review" class="form-control" />*@
                <textarea id="review" asp-for="Review" class="form-control" rows="7" cols="300" style="color:black;margin-top:10px;"></textarea>
                <br />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type = "hidden" asp-for="Rating" />
                
            </div>
            <div class="form-group">
                
                <input type = "hidden" asp-for="CreatedDate" />
               
            </div>
            <div class="form-group">
                <label asp-for="ModifiedDate" class="control-label"></label>
                <input asp-for="ModifiedDate" class="form-control" />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MovieDetails" asp-controller="Movie">Back to Movie List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
